<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AppSplash" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenBackground">@color/Access_Blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/access_logo_anim</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/Access_Blue</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/ams_branding_long</item>
        <item name="postSplashScreenTheme">@style/Theme.ACCESSManagementSystemPOS</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor">@color/cream_white</item>
        <item name="android:navigationBarColor">@color/cream_white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>